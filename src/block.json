{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "dblocks/hotspot",
	"version": "0.1.0",
	"title": "DBlocks Hotspot",
	"category": "widgets",
	"icon": "marker",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": true,
		"color": true,
		"border": {
			"color": true,
			"width": true,
			"radius": true,
			"default": {
				"radius": false
			}
		},
		"customRadius": true,
		"typography": {
			"fontSize": true
		},
		"align": [
			"wide",
			"full"
		]
	},
	"attributes": {
		"hotspotNumbers": {
			"type": "array",
			"default": []
		},
		"startNumber": {
			"type": "number",
			"default": 1
		}
	},
	"selectors": {
		"border": ".drag-point",
		"border.radius": ".drag-point",
		"backgroundColor": ".drag-point",
		"color": ".drag-point",
		"fontSize": ".drag-point"
	},
	"textdomain": "dblocks-hotspot",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}